{
  "name": "@nbun/source",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "dev": "dotenv -- turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "db:migrate:dev": "dotenv -- prisma migrate dev",
    "db:migrate:deploy": "dotenv -- prisma migrate deploy",
    "db:seed": "dotenv -- ts-node-dev ./prisma/seeds/index.ts",
    "db:generate": "prisma generate",
    "db:push": "dotenv -- prisma db push",
    "db:migrate:reset": "dotenv -- prisma migrate reset",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "prisma": "^5.21.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.1.6",
    "turbo": "^2.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "prettier": "^3.3.3"
  },
  "packageManager": "pnpm@9.10.0"
}
